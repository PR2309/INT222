                <div class="form-body">
                    <div class="modal-body">
                        <form action="/login" method="post">
                            <div class="mt-3">
                                <label class="prelabel px-2" for="name">&nbsp;Username:</label>
                                <input type="input" class="form-control rounded-5" id="email"
                                    placeholder="Your name" name="name" required>

                            </div>
                            <div class="mt-3">
                                <label class="text-size-1 px-2" for="password">&nbsp;Password:</label>
                                <input type="password" class="form-control rounded-5" id="password"
                                    placeholder="Password" name="password" required>
                            </div>
                            <div class="form-check custom-control custom-checkbox mt-2">

                                <div class="float-right mt-2" style="font-size: 0.9em;">
                                    <p><a href="javascript:;" class="link-highlight text-forgot forgot-tab-link">Forgot password?</a></p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-center">
                                <button class="btn btn-primary btn-block mt-3" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
                <small>
                    <div class="text-center align-items-center mt-2">
                        Don't have an account?
                        <a class="link-highlight register-tab-link" href="/signup" >Register</a>
                    </div>
                </small>

            </div>
        </div>
